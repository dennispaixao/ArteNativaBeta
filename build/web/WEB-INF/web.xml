<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>GerenciaCliente</servlet-name>
        <servlet-class>Control.GerenciaCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Navigation</servlet-name>
        <servlet-class>Control.Navigation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoriaDAO</servlet-name>
        <servlet-class>Model.CategoriaDAO</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManterPedidos</servlet-name>
        <servlet-class>Control.FinalizarPedido</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>formaPagamento</servlet-name>
        <servlet-class>Control.FormaPagamento</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItensPedido</servlet-name>
        <servlet-class>Control.ItensPedido</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Navigation</servlet-name>
        <url-pattern>/Navigation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoriaDAO</servlet-name>
        <url-pattern>/CategoriaDAO</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManterPedidos</servlet-name>
        <url-pattern>/ManterPedidos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>formaPagamento</servlet-name>
        <url-pattern>/formaPagamento</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItensPedido</servlet-name>
        <url-pattern>/ItensPedido</url-pattern>
    </servlet-mapping>
     <servlet-mapping>
        <servlet-name>GerenciaCliente</servlet-name>
        <url-pattern>/GerenciaCliente</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/500.jsp</location>
    </error-page>
</web-app>
